<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
            http://maven.apache.org/xsd/assembly-1.1.2.xsd
    ">
    
    <id>bin</id>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/release</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>licenses/*.*</include>
                <include>lib/*</include>
                <include>release_notes.txt</include>
                <include>README</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>CHANGES</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>autostart.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>README</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/maven-shared-archive-resources/META-INF</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>DEPENDENCIES</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/daemon/data/log</directory>
            <outputDirectory>${project.artifactId}/data/log</outputDirectory>
        </fileSet>         
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/daemon/data/db</directory>
            <outputDirectory>${project.artifactId}/data/db</outputDirectory>
        </fileSet>         
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/daemon/temp</directory>
            <outputDirectory>${project.artifactId}/temp</outputDirectory>
        </fileSet>         
        <fileSet>
            <directory>target/dependency</directory>
            <outputDirectory>${project.artifactId}/lib</outputDirectory>
            <includes>
                <include>**/*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>${project.artifactId}/lib</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:${project.artifactId}:jar</include>
            </includes>
<!--            <excludes>
                <exclude>*:*:war</exclude>
            </excludes>-->
            <scope>runtime</scope>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${project.artifactId}/apps/root</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>${project.groupId}:${src.artifactId}:war</include>
            </includes>
            <!--<scope>runtime</scope>-->
            <useProjectArtifact>false</useProjectArtifact>
<!--            <unpackOptions>
                <excludes>
                    <exclude>WEB-INF/deploy/</exclude>
                </excludes>
            </unpackOptions>-->
        </dependencySet>
    </dependencySets>
</assembly>
