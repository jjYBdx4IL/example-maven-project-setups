<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://maven.apache.org/POM/4.0.0
            http://maven.apache.org/maven-v4_0_0.xsd
            ">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.jjYBdx4IL.maven.examples</groupId>
        <artifactId>github-maven-examples</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>solr-example</artifactId>

    <name>Maven Examples :: solr Example</name>

    <properties>
        <solr.version>7.5.0</solr.version>
        <zk.version>3.4.10</zk.version>
        <solr.dir>${project.build.directory}/solr-${solr.version}</solr.dir>
        <zk.home.dir>${project.build.directory}/zookeeper-${zk.version}</zk.home.dir>
        <solr.port>8983</solr.port>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.3.0</version>
                <executions>
                    <execution>
                        <id>solr-dist-unpack</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://archive.apache.org/dist/lucene/solr/7.5.0/solr-7.5.0.zip</url>
                            <sha512>085eb16912dd91b40dffec363554cb434db6aff928761a9c1b852a56172c0c9a1026a875a10c3d1c8dc6d992e29bc2b273e83eb07876e544542ab44ce91407f1</sha512>
                        </configuration>
                    </execution>
                    <execution>
                        <id>zk-dist-unpack</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://archive.apache.org/dist/zookeeper/zookeeper-${zk.version}/zookeeper-${zk.version}.tar.gz</url>
                            <sha512>4c54e40ac8d0b267db4a188a30e39ed0ac2c3e8a8fadaf244be45ff5adee956df28f6cb9f1eb56f175e924fa3629b64f98286a090c46764c91c017613c80a51b</sha512>
                        </configuration>
                    </execution>
                    <execution>
                        <id>wget-words</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/dwyl/english-words/af8566a78b34b9a1ad7fe0dcd6e183a0f6f5f94b/words.txt</url>
                            <sha512>3cfc52b1f68a46fb9c7c96fd2e3f24260461663fdc4f5c891e018d07a9bde2d418af5a47a8d72bac952469bf1671cb29f82d89be214d854fa2614b61f6d2c27f</sha512>
                            <unpack>false</unpack>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <skip>${skipITs}</skip>
                    <skipCache>false</skipCache>
                    <retries>2</retries>
                    <unpack>true</unpack>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.20.1</version>
                <executions>
                    <execution>
                        <id>integration-test</id>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>verify</id>
                        <goals>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <failIfNoTests>true</failIfNoTests>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <forkCount>0</forkCount>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>stop-solr-pre-clean</id>
                        <phase>pre-clean</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <taskdef resource="net/sf/antcontrib/antcontrib.properties" />
                                <if>
                                    <socket server="localhost" port="${solr.port}" />
                                    <then>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="stop" />
                                            <arg value="-all" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="stop" />
                                            <arg value="zoo1.cfg" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="stop" />
                                            <arg value="zoo2.cfg" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="stop" />
                                            <arg value="zoo3.cfg" />
                                        </exec>
                                    </then>
                                    <else></else>
                                </if>
                            </target>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>20020829</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>com.googlecode.maven-download-plugin</groupId>
                                        <artifactId>download-maven-plugin</artifactId>
                                        <versionRange>[1.3.0,)</versionRange>
                                        <goals>
                                            <goal>wget</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.solr</groupId>
            <artifactId>solr-core</artifactId>
            <version>${solr.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.jjYBdx4IL.utils</groupId>
            <artifactId>solr-utils</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.github.jjYBdx4IL.utils</groupId>
            <artifactId>env-utils</artifactId>
            <version>1.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.github.jjYBdx4IL.utils</groupId>
            <artifactId>io-utils</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.7.25</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>single-node-example</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>!cluster</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <skip>${skipITs}</skip>
                                    <target>
                                        <taskdef resource="net/sf/antcontrib/antcontrib.properties" />
                                        <if>
                                            <socket server="localhost" port="${solr.port}" />
                                            <then>
                                                <exec executable="bash" spawn="false" failonerror="false">
                                                    <arg value="${solr.dir}/bin/solr" />
                                                    <arg value="stop" />
                                                    <arg value="-all" />
                                                </exec>
                                            </then>
                                            <else></else>
                                        </if>
                                        ''
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="start" />
                                            <arg value="-p" />
                                            <arg value="${solr.port}" />
                                        </exec>
                                        <waitfor maxwait="30" maxwaitunit="second">
                                            <socket server="localhost" port="${solr.port}" />
                                        </waitfor>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="create" />
                                            <arg value="-p" />
                                            <arg value="${solr.port}" />
                                            <arg value="-c" />
                                            <arg value="gettingstarted" />
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <skip>${skipITs}</skip>
                                    <target>
                                        <taskdef resource="net/sf/antcontrib/antcontrib.properties" />
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="stop" />
                                            <arg value="-all" />
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>ant-contrib</groupId>
                                <artifactId>ant-contrib</artifactId>
                                <version>20020829</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>cluster-example</id>
            <activation>
                <property>
                    <name>cluster</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <taskdef resource="net/sf/antcontrib/antcontrib.properties" />
                                        <if>
                                            <socket server="localhost" port="${solr.port}" />
                                            <then>
                                                <exec executable="bash" spawn="false" failonerror="false">
                                                    <arg value="${solr.dir}/bin/solr" />
                                                    <arg value="stop" />
                                                    <arg value="-all" />
                                                </exec>
                                                <exec executable="bash" spawn="false" failonerror="false">
                                                    <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                                    <arg value="stop" />
                                                    <arg value="zoo1.cfg" />
                                                </exec>
                                                <exec executable="bash" spawn="false" failonerror="false">
                                                    <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                                    <arg value="stop" />
                                                    <arg value="zoo2.cfg" />
                                                </exec>
                                                <exec executable="bash" spawn="false" failonerror="false">
                                                    <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                                    <arg value="stop" />
                                                    <arg value="zoo3.cfg" />
                                                </exec>
                                            </then>
                                            <else></else>
                                        </if>
                                        <copy toDir="${zk.home.dir}/conf">
                                            <fileset dir="${project.basedir}/src/test/resources">
                                                <include name="**/zoo*.cfg" />
                                            </fileset>
                                            <filterset>
                                                <filter token="ZKHOMEDIR" value="${zk.home.dir}" />
                                            </filterset>
                                        </copy>
                                        <copy tofile="${zk.home.dir}/node1/myid" file="${project.basedir}/src/test/resources/myid1" />
                                        <copy tofile="${zk.home.dir}/node2/myid" file="${project.basedir}/src/test/resources/myid2" />
                                        <copy tofile="${zk.home.dir}/node3/myid" file="${project.basedir}/src/test/resources/myid3" />
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="start" />
                                            <arg value="zoo1.cfg" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="start" />
                                            <arg value="zoo2.cfg" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="start" />
                                            <arg value="zoo3.cfg" />
                                        </exec>
                                        <!-- initial collection config upload, for updates see
                                        https://lucene.apache.org/solr/guide/7_0/using-zookeeper-to-manage-configuration-files.html -->
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="zk" />
                                            <arg value="cp" />
                                            <arg value="file:${solr.dir}/server/solr/solr.xml" />
                                            <arg value="zk:/solr.xml" />
                                            <arg value="-z" />
                                            <arg value="localhost:2181" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="zk" />
                                            <arg value="upconfig" />
                                            <arg value="-n" />
                                            <arg value="myconfig" />
                                            <arg value="-d" />
                                            <arg value="${solr.dir}/server/solr/configsets/_default/conf" />
                                            <arg value="-z" />
                                            <arg value="localhost:2181" />
                                        </exec>
                                        <mkdir dir="${solr.dir}/node1" />
                                        <mkdir dir="${solr.dir}/node2" />
                                        <mkdir dir="${solr.dir}/node3" />
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="start" />
                                            <arg value="-c" />
                                            <arg value="-z" />
                                            <arg value="localhost:2181,localhost:2182,localhost:2183" />
                                            <arg value="-s" />
                                            <arg value="${solr.dir}/node1" />
                                            <arg value="-h" />
                                            <arg value="localhost" />
                                            <arg value="-p" />
                                            <arg value="8983" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="start" />
                                            <arg value="-c" />
                                            <arg value="-z" />
                                            <arg value="localhost:2181,localhost:2182,localhost:2183" />
                                            <arg value="-s" />
                                            <arg value="${solr.dir}/node2" />
                                            <arg value="-h" />
                                            <arg value="localhost" />
                                            <arg value="-p" />
                                            <arg value="8984" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="start" />
                                            <arg value="-c" />
                                            <arg value="-z" />
                                            <arg value="localhost:2181,localhost:2182,localhost:2183" />
                                            <arg value="-s" />
                                            <arg value="${solr.dir}/node3" />
                                            <arg value="-h" />
                                            <arg value="localhost" />
                                            <arg value="-p" />
                                            <arg value="8985" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="create" />
                                            <arg value="-c" />
                                            <arg value="gettingstarted" />
                                            <arg value="-n" />
                                            <arg value="myconfig" />
                                            <arg value="-shards" />
                                            <arg value="3" />
                                            <arg value="-replicationFactor" />
                                            <arg value="2" />
                                        </exec>
<!--                                         <exec executable="curl" spawn="false" failonerror="true"> -->
<!--                                             <arg value="http://localhost:8983/solr/gettingstarted/config" /> -->
<!--                                             <arg value="-d" /> -->
<!--                                             <arg value="@${project.basedir}/src/test/resources/updateSettings.json" /> -->
<!--                                         </exec> -->
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="zk" />
                                            <arg value="ls" />
                                            <arg value="zk:/" />
                                            <arg value="-r" />
                                            <arg value="-z" />
                                            <arg value="localhost:2183" />
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <taskdef resource="net/sf/antcontrib/antcontrib.properties" />
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${solr.dir}/bin/solr" />
                                            <arg value="stop" />
                                            <arg value="-all" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="stop" />
                                            <arg value="zoo1.cfg" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="stop" />
                                            <arg value="zoo2.cfg" />
                                        </exec>
                                        <exec executable="bash" spawn="false" failonerror="false">
                                            <arg value="${zk.home.dir}/bin/zkServer.sh" />
                                            <arg value="stop" />
                                            <arg value="zoo3.cfg" />
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>ant-contrib</groupId>
                                <artifactId>ant-contrib</artifactId>
                                <version>20020829</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>

