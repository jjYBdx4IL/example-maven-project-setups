<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] [%-50c{4}] %M %L %m%n" />
        </layout>
    </appender>

    <logger name="com.github.jjYBdx4IL.maven.examples.gwt" additivity="false">
        <level value="fine"></level>
        <appender-ref ref="stdout" />  
    </logger>

    <root>
        <priority value="info" />
        <appender-ref ref="stdout" />
    </root>
</log4j:configuration>
